{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="card bg-primary text-white mb-5 mt-5 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-users fa-5x"></i>
                        </div>
                        <div class="col-8">
                            <h3 class="card-title dashboard-title">{{seeUsers}}  utilisateurs inscrits</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
